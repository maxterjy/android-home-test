<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/special_offer_imgview"
        android:src="@drawable/ic_promotion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:src="@drawable/ic_chevron_right_blue"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/special_offer_imgview"
        android:layout_centerVertical="true">

        <TextView
            android:text="Ưu đã &amp; hợp tác"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Các ưu đã cho chủ thẻ ngân hàng"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</RelativeLayout>